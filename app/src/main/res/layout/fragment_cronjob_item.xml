<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    >
        <TableRow>
            <TextView
                android:text="Name"
            />
            <TextView
                android:id="@+id/item_cronjob_name"
            />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Last run at:"
                />
            <TextView
                android:id="@+id/item_cronjob_lastRunTime"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Status:"
                />
            <TextView
                android:id="@+id/item_cronjob_status"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/item_cronjob_enabledDisabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
</LinearLayout>